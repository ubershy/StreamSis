<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="root" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ubershy.streamsis.gui.controllers.editor.checkers.LogicalCheckerController">
   <columnConstraints>
      <ColumnConstraints minWidth="10.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints fillHeight="false" maxHeight="1.7976931348623157E308" minHeight="25.0" vgrow="NEVER" />
      <RowConstraints fillHeight="false" maxHeight="1.7976931348623157E308" minHeight="25.0" vgrow="NEVER" />
      <RowConstraints fillHeight="false" maxHeight="1.7976931348623157E308" minHeight="25.0" vgrow="NEVER" />
      <RowConstraints fillHeight="false" maxHeight="1.7976931348623157E308" minHeight="25.0" vgrow="NEVER" />
   </rowConstraints>
   <children>
      <Label text="During a check it gets results of check of contained Checkers and performs logical operation on them to get a single result - True or False." wrapText="true" GridPane.columnSpan="2" GridPane.rowIndex="1" />
      <Label maxHeight="1.7976931348623157E308" text="Logical operation" GridPane.rowIndex="3" />
      <Label text="This Checker should contain Checker(s) inside. You can add checker(s) inside by right clicking on LogicalChecker in Structure view." wrapText="true" GridPane.columnSpan="2" />
      <HBox fx:id="operatorsHBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Label text="Specify the logical operation on the results from contained Checkers. You can move mouse cursor over the operations to see their detailed descriptions." wrapText="true" GridPane.columnSpan="2" GridPane.rowIndex="2" />
   </children>
</GridPane>
